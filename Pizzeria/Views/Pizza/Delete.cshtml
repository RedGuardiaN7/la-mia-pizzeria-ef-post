
@{
    ViewData["Title"] = "Delete";
    @model Pizza
}

<div class="container">
    <form asp-controller="Pizza" asp-action="Delete" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <h2>Stai per eliminare la pizza "@Model.Name"</h2>
            <label>Titolo:</label>
            <input asp-for="Name" type="text" class="form-control" id="disabledTextInput" placeholder="@Model.Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Descrizione:</label>
            <textarea asp-for="Description" class="d-block w-100" rows="8" id="disabledTextInput" placeholder="@Model.Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Url Immagine:</label>
            <input asp-for="Image" type="text" class="form-control" id="disabledTextInput" placeholder="@Model.Image" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger">Elimina</button>
    </form>
</div>